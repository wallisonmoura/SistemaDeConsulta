@model IEnumerable<SistemaDeConsulta.ViewModels.TipoExames.ListTipoExamesViewModel>;
@{
    ViewData["Title"] = "Lista de tipos de exames";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a role="button" class="btn btn-primary" asp-controller="TipoExame" asp-action="Create">Adicionar novo tipo de exame</a>
    </div>
    <h1 class="display-5">Lista de tipos de exames</h1>

    <table class="table table-striped table-bordered">
        <thead class="text-start">
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody class="text-start">
            @if (Model != null && Model.Any())
            {
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Nome</td>
                        <td>@m.Descricao</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Ações">
                                <a role="button" class="btn btn-outline-secondary" asp-controller="TipoExame" asp-action="Edit" asp-route-id="@m.Id">Editar</a>
                                <a role="button" type="button" class="btn btn-outline-danger" asp-controller="TipoExame" asp-action="DeleteConfirm" asp-route-id="@m.Id">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">Nenhum tipo de exame encontrado.</td></tr>
            }
           
        </tbody>
    </table>

</div>
