@model SistemaDeConsulta.ViewModels.TipoExames.EditTipoExamesViewModel;

@{
    ViewData["Title"] = "Editar tipo de exame";
}

<div class="text-center">
    <h1 class="display-5">Editar tipo de exame</h1>
</div>

<form asp-action="Edit" class="row g-3">
    <div class="col-md-4">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="col-md-8">
        <label asp-for="Descricao" class="form-label"></label>
        <textarea  asp-for="Descricao" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
        <div class="d-flex gap-2 justify-content-md-end">
        <button type="submit" class="btn btn-primary">Alterar</button>
        <a class="btn btn-secondary" asp-controller="TipoExame" asp-action="Index" role="button">Voltar</a>
    </div>
</form>
