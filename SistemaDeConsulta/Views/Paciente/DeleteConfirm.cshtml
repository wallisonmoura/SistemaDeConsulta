@using SistemaDeConsulta.Models.Entities;
@model Paciente
@{
    ViewData["Title"] = "Deletar paciente";
}

<div class="text-center">
    <h3>Realmente deseja deletar o paciente (@Model.Nome)?</h3>
    <a role="button" class="btn btn-primary" asp-controller="Paciente" asp-action="Index">Cancelar exclusão</a>
    <a role="button" class="btn btn-danger" asp-controller="Paciente" asp-action="Delete" asp-route-id="@Model.Id" >Confirma exclusão</a>
</div>

